{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@react-navigation/*": [
        "./node_modules/@react-navigation/*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "jest",
      "node"
    ],
    "lib": [
      "es2015",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "es2021",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
